server {
    listen 80;
    server_name WEBSITE_NAME;
    return https://$host$request_uri;
}

server {
    listen 443 ssl http2;
    charset utf-8;
    root WEBSITE_ROOT_DIR;
    server_name WEBSITE_NAME;

    include conf.d/directive-only/ssl.conf;
    ssl_certificate WEBSITE_SSL_CERTIFICATE_FILE;
    ssl_certificate_key WEBSITE_SSL_PRIVATE_KEY_FILE;

    access_log off;
    error_log WEBSITE_ERROR_LOG_FILE;

    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    include conf.d/basic.conf;
    include conf.d/location/php-fpm.conf;
}
